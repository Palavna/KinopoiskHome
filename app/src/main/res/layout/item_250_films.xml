<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_250"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFilms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="sdfsdfsd"
        android:textSize="16sp"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/icon_250"
        app:layout_constraintStart_toStartOf="@id/icon_250"
        app:layout_constraintTop_toBottomOf="@id/icon_250" />

</androidx.constraintlayout.widget.ConstraintLayout>